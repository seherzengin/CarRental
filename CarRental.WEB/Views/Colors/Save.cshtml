
@{
    ViewData["Title"] = "Save";
}

@model ColorDto
<h1>Save Color</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Save" method="post" asp-controller="Colors">
            <div class="form-group">
                <label asp-for="ColorName"></label>
                <input asp-for="ColorName" class="form-control"/>
                <span asp-validation-for="ColorName" class="text-danger"></span>
            </div>
           
             <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

