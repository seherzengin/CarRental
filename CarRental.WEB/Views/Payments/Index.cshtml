@using CarRental.Caching
@using CarRental.Repository.Models
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<PaymentDto>;
<table class="table table-striped">
        <thead>
            <tr>
            <td>Id</td>
            <td>CustomersId</td>
            <td>CreditCardsId</td>
            <td>PaymentDate</td>
            <td>Total</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
               <td>@item.Id</td>
                <td>@item.CustomersId</td>
                 <td>@item.CreditCardsId</td>
                  <td>@item.PaymentDate</td>
                   <td>@item.Total</td>
                      <td>
                        <a class="btn btn-warning" asp-controller="Payments" asp-action="Update" asp-route-id="@item.Id">Update</a>
                          <a class="btn btn-danger" asp-controller="Payments" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                        </td>
                 </tr>
            }

        </tbody>



    </table>

